{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist-scripts",
    "declaration": false,
    "sourceMap": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts", "src/**/*.ts", "src/**/*.tsx"]
}
